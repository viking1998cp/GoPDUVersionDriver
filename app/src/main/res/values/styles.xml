<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorGreen</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/fontNormal</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="translucentDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ToolBarTheme.ToolBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>

    </style>

    <!-- style for button form login -->
    <style name="button.Login"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_marginTop">@dimen/margin16dp</item>
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/background_button_no_boder</item>
        <item name="android:textColor">@color/colorWhite</item>


    </style>

    <style name="etRegister" >
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/padding5dp</item>
        <item name="android:layout_width"> @dimen/width0dp</item>
        <item name="android:layout_height">@dimen/height40dp</item>
        <item name="android:textSize">@dimen/fontSmall</item>
        <item name="android:layout_weight">8</item>
        <item name="android:background">@drawable/background_layout_white</item>
    </style>

    <style name="radioButtonGender">
        <item name="android:layout_width">@dimen/width0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">@dimen/padding5dp</item>
    </style>

    <style name="tvUpLoadImage">
        <item name="android:layout_marginTop">@dimen/margin8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fontMedium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextCamera" >
        <item name="android:textSize">@dimen/fontMedium</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:layout_width" >wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="buttonAcceptContract">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/background_button_no_boder</item>
        <item name="android:layout_margin">@dimen/margin4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="textRegister">
        <item name="android:textSize">@dimen/fontSmall</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/width0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="navigationBottomStyle">
        <item name="android:textSize">@dimen/fontSmall</item>
        <item name="android:padding">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <dimen name="height30dp">30dp</dimen>
    <dimen name="height40dp">40dp</dimen>
</resources>
