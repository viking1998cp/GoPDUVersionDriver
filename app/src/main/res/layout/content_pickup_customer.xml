<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:id="@+id/cdlPickUpCustomer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginBottom="@dimen/margin60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <Button
                    android:paddingTop="@dimen/padding20dp"
                    android:paddingBottom="@dimen/padding20dp"
                    android:text="Pick Up"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button_pickup"/>

                <Button
                    android:paddingTop="@dimen/padding20dp"
                    android:paddingBottom="@dimen/padding20dp"
                    android:text="Drop Off"
                    android:textColor="@color/colorGreen"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button_destination"/>
            </LinearLayout>

            <LinearLayout
                android:background="@color/colorGray6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:padding="@dimen/padding10dp">

                <TextView
                    android:id="@+id/tvNamePickupDetail"
                    android:textColor="@color/colorGray1"
                    android:layout_width="@dimen/width0dp"
                    android:layout_height="match_parent"
                    android:text="42353464564574657456"
                    android:textSize="@dimen/fontMedium"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_weight="7"/>
                <LinearLayout
                    android:layout_width="@dimen/width0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    >

                    <ImageView
                        android:background="@drawable/background_circle"
                        android:padding="@dimen/padding20dp"
                        android:layout_width="@dimen/imvLogo"
                        android:layout_height="@dimen/imvLogo"
                        android:src="@drawable/ic_paper_plane"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/padding10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:background="@color/colorGray6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontMedium"
                    android:text="@string/GoPDUEconomy"
                    android:gravity="left"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontMedium"
                    android:text="PRICE: 14000"
                    android:gravity="left"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    />


            </LinearLayout>
            <LinearLayout
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:orientation="vertical">
                <LinearLayout
                    android:padding="@dimen/padding10dp"
                    android:background="@color/colorGray6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="@dimen/width0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >
                        <ImageView
                            android:background="@drawable/background_circle"
                            android:padding="@dimen/padding20dp"
                            android:layout_width="@dimen/imvLogo"
                            android:layout_height="@dimen/imvLogo"
                            android:src="@drawable/ic_call_gray_24dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/width0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >
                        <ImageView
                            android:background="@drawable/background_circle"
                            android:padding="@dimen/padding20dp"
                            android:layout_width="@dimen/imvLogo"
                            android:layout_height="@dimen/imvLogo"
                            android:src="@drawable/ic_cancel_gray_24dp"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/padding10dp"
                    android:background="@color/colorGray6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnPickUpComplete"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/buttonJob"
                        android:background="@drawable/background_button_no_boder"
                        android:text="@string/pickup"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/fontMedium"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>





</layout>
